extends layout

block content
  .container
    .row
      .col-md-8.offset-md-2
        if errors 
          each error in errors 
            .alert.alert-danger #{error.msg}
        h1.text-center.mt-5 Add Activity
        form(method="POST", action="/activities/add")
          .form-group.mb-3
            label Activity Type:
            .d-flex.flex-row.flex-wrap.mt-3
              each activityType in types
                .form-check.me-2
                  input.form-check-input(name="activityType", type="radio", value=activityType, id=activityType)
                  label.form-check-label(for=activityType)= activityType

          .form-group.mt-4
            label(for='duration') Duration (minutes):
            input#duration.form-control.mt-2(name="duration", type="number")

          .form-group.mt-4
            label(for='calorieLoss') Calorie loss:
            input#calorieLoss.form-control.mt-2(name="calorieLoss", type="number")

          .form-group.mt-4
            label(for='date') Date:
            input#date.form-control.mt-2(name="date", type="date")

          .text-center.mt-4
            button.btn.btn-primary.mt-2(type='submit') Add


