extends layout

block content
  .container
    .row
      .col-md-8.offset-md-2
        if errors 
          each error in errors 
            .alert.alert-danger #{error.msg}
        h1.text-center.mt-5.mb-3  Edit Profile
        form(method="POST", action= profile ? `/profile/update?profileId=${profile._id}` : '/profile/update')
          .form-group.mb-3
            label(for='age') Age:
            input#age.form-control.mt-2(name="age", type="number", value=profile ? profile.age : '')

          .form-group.mb-3
            label(for='birth') Date of Birth:
            input#birth.form-control.mt-2(name="birth", type="date", value=profile ? profile.birth : '')

          .form-group.mb-3
            label(for='weight') Weight (kg):
            input#weight.form-control.mt-2(name="weight", type="number", step="0.01", value=profile ? profile.weight : '')

          .form-group.mb-3
            label(for='height') Height (cm):
            input#height.form-control.mt-2(name="height", type="number", step="0.01", value=profile ? profile.height : '')

          .form-group.mb-3
            label(for='goals') Goals:
            input#goals.form-control.mt-2(name="goals", type="text", value=profile ? profile.goals : '')

          .text-center.mt-4
            button.btn.btn-primary(type='submit') Update

